<div id="masonry-container">
<% @books.each do |book| %>
  <% size = ["small", "small", "medium", "large"].sample %>
  <div class="alignleft mas-box <%= size %>">
    <a href="<%= book.page_url %>">
      <% case size %>
      <% when "small" %>
        <img src="<%= book.medium_image %>" height="250px" width="175px" />
      <% when "medium" %>
        <div>
        <img src="<%= book.large_image %>" height="500px" width="350px" />
        </div>
      <% when "large" %>
        <img src="<%= book.large_image %>" height="500px" width="350px" />
      <% end %>
    </a>
  </div>
<% end %>
</div>
